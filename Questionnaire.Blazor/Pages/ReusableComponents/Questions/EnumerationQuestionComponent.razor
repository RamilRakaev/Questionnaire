@inherits BaseQuestionComponent

<label class="col-lg-2 p-0" for="@id">@QuestionAnswer.Question.DisplayName</label>
<select class="custom-select col-lg-9" id="@id" @oninput=Input>
    @foreach (var option in QuestionAnswer.Question.Options)
    {
        <option value="@option.DisplayName">@option.DisplayName</option>
    }
</select>