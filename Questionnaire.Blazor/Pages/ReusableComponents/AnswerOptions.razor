@using Questionnaire.Blazor.Models
@using Questionnaire.Blazor.Models.Questions

@foreach (var option in Options)
{
    <div class="form-group">
        <InputText @bind-Value=option.DisplayName class="form-control" />
    </div>

    <div class="form-group">
        <InputText @bind-Value=option.JsonName class="form-control" />
    </div>
}

<div class="form-group">
    <label>Вариант ответа</label>
    <InputText @bind-Value=currentOption.DisplayName class="form-control" />
</div>

<div class="form-group">
    <label>Вариант ответа</label>
    <InputText @bind-Value=currentOption.JsonName class="form-control" />
</div>

<div class="form-group">
    <button type="button" @onclick=AddOption class="btn btn-info">Добавить вариант</button>
</div>

@code {
    [Parameter]
    public List<OptionModel> Options { get; set; }

    private OptionModel currentOption = new();

    private void AddOption()
    {
        Options.Add(currentOption);
        currentOption = new();
    }
}
