@page "/root/"

@using Questionnaire.Domain.Models
@CreateComponent()
<h3>Опросники</h3>
<table>
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var questionnaire in questionnaires)
        {
            <tr>
                <td>@questionnaire.DisplayName</td>
                <td>
                    <button class="btn btn-primary m-3">Перейти</button>
                    <button class="btn btn-danger m-3">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private QuestionnaireModel[] questionnaires = {
        new()
        {
            DisplayName = "DisplayName",
            JsonName = "m",
            Questions = new()
            {
                new()
                {
                    Id = 1,
                    DefaultValue = "DefaultValue",
                    DisplayName = "DisplayName",
                    JsonName = "JsonName",
                    QuestionType = QuestionType.Enumeration,
                }
            },
        }
    };

    private RenderFragment CreateComponent() => builder =>
    {
        for (var i = 0; i < 3; i++) 
        {
            builder.OpenComponent(0, typeof(EnumerationGroup<QuestionType>));
            builder.AddAttribute(1, "ValueInput", QuestionType.DateTime);
            builder.AddAttribute(1, "Label", "Бредятина");
            builder.CloseComponent();
        }
    };
}
