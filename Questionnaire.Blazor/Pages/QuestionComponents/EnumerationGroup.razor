@using Questionnaire.Blazor.Models

@typeparam Enumeration where Enumeration : struct, System.Enum

<div class="form-group">
    <select class="custom-select" @oninput=SetValue>
        @foreach (var type in Enum.GetValues(typeof(Enumeration)))
        {
            <option value=@type>@type</option>
        }
    </select>
    <label>@Label</label>
</div>

@code {
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public Enumeration ValueInput { get; set; }

    [Parameter]
    public EventCallback<Enumeration> ValueInputChanged { get; set; }

    private async Task SetValue(ChangeEventArgs eventArgs)
    {
        Enum.TryParse<Enumeration>(eventArgs.Value.ToString(), out var value);

        ValueInput = value;
        await ValueInputChanged.InvokeAsync(ValueInput);
    }
}
