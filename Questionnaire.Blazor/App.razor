@using Questionnaire.Blazor.Areas.Identity
@using Questionnaire.Blazor.Pages.Interviewee.Shared
@using Questionnaire.Blazor.Pages.Root.Shared
@using Questionnaire.Infrastructure.Conventions

@inject TokenProvider TokenProvider

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeView>
                <Authorized>
                    @if (context.User.FindFirst("role").Value == RoleConstants.Admin)
                    {
                        <RouteView RouteData="@routeData" DefaultLayout="@typeof(AdminLayout)" />
                    }
                    else if (context.User.FindFirst("role").Value == RoleConstants.Interviewee)
                    {
                        <RouteView RouteData="@routeData" DefaultLayout="@typeof(IntervieweeLayout)" />
                    }
                </Authorized>
                <NotAuthorized>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                </NotAuthorized>
            </AuthorizeView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Не существует страницы по данному адресу.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Parameter]
    public TokenProvider InitialState { get; set; }

    protected override void OnInitialized()
    {
        TokenProvider.XsrfToken = InitialState.XsrfToken;
    }
}