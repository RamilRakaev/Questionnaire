@using Questionnaire.Blazor.Interfaces
@using Questionnaire.Blazor.Models


<div class="form-group">
    <label>@Question.DisplayName</label>
    <input type="text" value=@Question.DefaultValue class="form-control col-4" @oninput=SetValue />
</div>

@code {
    [Parameter]
    public Question Question { get; set; }

    [Parameter]
    public Answer Answer { get; set; }

    [Parameter]
    public EventCallback<string> ValueInputChanged { get; set; }

    private async Task SetValue(ChangeEventArgs eventArgs)
    {
        if (Answer.Value != (string) eventArgs.Value)
        {
            Answer.Value = (string) eventArgs.Value.ToString();
            await ValueInputChanged.InvokeAsync(Answer.Value.ToString());
        }
    }
}
